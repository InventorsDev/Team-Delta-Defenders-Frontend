# API Configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_APP_URL=http://localhost:3000

# Environment
REACT_APP_ENVIRONMENT=development

# Security Configuration
REACT_APP_TOKEN_STORAGE_KEY=agrilink_auth_token
REACT_APP_ENCRYPTION_KEY=your-secure-encryption-key-here

# Feature Flags
REACT_APP_ENABLE_REGISTRATION=true
REACT_APP_ENABLE_PASSWORD_RESET=true
REACT_APP_ENABLE_EMAIL_VERIFICATION=true

# External Services (Optional)
REACT_APP_GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id

# Monitoring and Analytics (Optional)
REACT_APP_SENTRY_DSN=your-sentry-dsn
REACT_APP_ANALYTICS_ID=your-analytics-id

# Rate Limiting
REACT_APP_API_RATE_LIMIT=100
REACT_APP_API_RATE_WINDOW=60000

# Security Headers
REACT_APP_CSP_NONCE=your-csp-nonce